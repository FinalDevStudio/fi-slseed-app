doctype html

- const { options } = htmlWebpackPlugin;

html(lang='en')
  head
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='version', content=options.package.version)
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(charset='utf-8')

    title=options.package.app.name

    //- Social sharing
    meta(property='og:title' content=options.package.app.name)
    meta(property='og:description' content=options.package.app.description)
    meta(property='og:type' content='website')
    meta(property='og:image:width' content='1200')
    meta(property='og:image:height' content='630')
    meta(property='og:image' content=options.package.app.ogImage)
    meta(property='og:url' content=options.package.app.home)

    meta(name='twitter:card' content='summary')

    //- External styles
    each style in options.externals.styles
      link(
        href=style.src
        integrity=style.integrity
        crossorigin='anonymous'
        rel='stylesheet'
        )

  body
    #app

    //- External scripts
    each script in options.externals.scripts
      script(
        src=script.src
        integrity=script.integrity
        crossorigin='anonymous'
        )
